{% extends 'base.html.twig' %}

{% block title %}recherche{% endblock %}

{% block body %}
			<div class="articleCards">
				{% for item in articles %}
					<div class="card mb-3 ">
						<img src="{{ asset('images/articles') }}/{{ item.image }}" class="card-img-top " alt="...">
						<div class="card-body">
							<h5 class="card-title">{{ item.title }}</h5>
							<small class="text-body-secondary">
								{{ item.createdAt ? item.createdAt|date('Y-m-d H:i:s') : '' }}
							</small>
							<p class="card-text">
								{{ item.content|slice(0, 120) }}...
							</p>
								<p class="card-text "> <small class="text-body-secondary">
									<a href={{ path('app_article_show',{'id':item.id } ) }} class="btn btn-sm btn-dark rounded-pill w-50">Lire l'article</a>
								</small>
							</p>
						</div>
					</div>


        {% else %}

                <h3>aucun article dispo</h3>

        {% endfor %}
			</div>


{% endblock %}
