{% extends 'base.html.twig' %}

{% block title %}Destination{% endblock %}

{% block body %}
    <h1>Destination  : {{ destination.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ destination.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ destination.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ destination.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ destination.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_destination_index') }}">back to list</a>
{# 
    <a href="{{ path('app_destination_edit', {'id': destination.id}) }}">edit</a> #}

    {# {{ include('destination/_delete_form.html.twig') }} #}
       <h1>Article  index of destination {{ destination.name }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>IsPublished</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.isPublished ? 'Yes' : 'No' }}</td>
                <td>{{ article.image }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    {# <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div> 

    {% for categorie in categories %}
        <h2>Categorie {{categorie.name}}</h2>
    {% endfor %}
    </div>
{% endblock %}
